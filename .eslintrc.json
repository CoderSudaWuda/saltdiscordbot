{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-undef": "error",
    "semi": "warn",
    "spaced-comment": "warn",
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": "error",
    "comma-dangle": "warn",
    "prefer-arrow-callback": "error",
    "no-console": 0,
    "no-unused-vars": 0
  }
}
